{
    "compilerOptions": {
        "allowJs": false,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "incremental": true,
        "lib": [
            "ES2022"
        ],
        "module": "CommonJS",
        "rootDir": "./src",
        "outDir": "./build",
        "strict": true,
        "target": "ES2022",
        "removeComments": true,
        "noUnusedLocals": true,
        "pretty": true,
        "newLine": "lf",
        "noImplicitOverride": true,
        "noFallthroughCasesInSwitch": true,
        "noUncheckedIndexedAccess": true,
        "noPropertyAccessFromIndexSignature": true,
        "noEmitOnError": true,
        "skipLibCheck": true
    }
}