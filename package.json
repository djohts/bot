{
    "name": "djohbot",
    "description": "djoh's random discord bot",
    "main": "build/sharding",
    "scripts": {
        "build": "tsc && yarn copy",
        "build:run": "yarn build && yarn start",
        "start": "node --no-warnings .",
        "copy": "yarn copy:env && yarn copy:locales",
        "copy:env": "copyfiles .env build",
        "copy:locales": "copyfiles -u 1 \"src/locales/*\" build",
        "watch": "tsc -w"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/itzJOHv/djohbot.git"
    },
    "author": "djoh",
    "license": "GPL-3.0",
    "bugs": {
        "url": "https://github.com/itzJOHv/djohbot/issues"
    },
    "homepage": "https://github.com/itzJOHv/djohbot",
    "engines": {
        "node": ">=18"
    },
    "dependencies": {
        "@eartharoid/i18n": "^1.2.1",
        "@typegoose/typegoose": "^9.12.1",
        "axios": "^1.1.3",
        "discord-hybrid-sharding": "^1.7.4",
        "discord.js": "^14.6.0",
        "dotenv": "^16.0.3",
        "erela.js": "github:menudocs/erela.js#build",
        "erela.js-spotify": "^1.2.0",
        "fastify": "^4.9.2",
        "lodash": "^4.17.21",
        "mongoose": "~6.6.0",
        "pretty-ms": "^7.0.1",
        "sanitize-filename": "^1.6.3",
        "string-progressbar": "^1.0.4",
        "svg2img": "^1.0.0-beta.2",
        "text-table": "^0.2.0",
        "winston": "^3.8.2",
        "winston-daily-rotate-file": "^4.7.1"
    },
    "devDependencies": {
        "@types/lodash": "^4.14.187",
        "@types/node": "^18.11.9",
        "@types/text-table": "^0.2.2",
        "copyfiles": "^2.4.1",
        "recursive-readdir-synchronous": "^0.0.4",
        "terser": "^5.15.1",
        "typescript": "^4.8.4"
    }
}
